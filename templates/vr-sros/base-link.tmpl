{{ if contains .port "/c" }}
/configure port {{ slice .port 0 -2 }} admin-state enable
/configure port {{ slice .port 0 -2 }} connector breakout c1-10g
{{ end }}

/configure port {{ .port }} admin-state enable

/configure router interface {{ .name }}
    ipv4 primary address {{ ip .ip }}
    ipv4 primary prefix-length {{ ipmask .ip }}
    port {{ .port }}:{{ default .vlan "1" }}

/configure router isis {{ default .isis_iid "0" }}
    interface {{ .name }}

/configure router rsvp
    interface {{ .name }} admin-state enable

/configure router mpls
    interface {{ .name }} admin-state enable
